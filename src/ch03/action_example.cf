body common control {
     bundlesequence => { "test" };
     inputs => { "cfengine_stdlib.cf" };
}

bundle agent test
{
  files:
    "/etc/motd"
      edit_lines => insert_lines("Unauthorized access will be prosecuted."),
      action => warn_hourly;
}

body action warn_hourly
{
  action_policy => "warn";
  ifelapsed => "60";
}
